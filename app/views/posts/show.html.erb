<header>
  <h1>not-Reddit: <%= @post.category %></h1>
  <p><%= link_to 'Home', root_path %></p>
</header>

<h2><%= @post.title %></h2>

<p><%= link_to "#{@post.url}", @post.url, :target => "_blank" %></p>
<p><%= @post.description %></p>
<p><%= @post.vote %></p>
<p><%= link_to 'Edit Post', edit_post_path(@post) %> <%= link_to 'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure?' } %></p>

<p><%= link_to 'Comment', new_post_comment_path(@post) %></p>

<% @comments.each do |comment|  %>
  <h4><%= comment.name %></h4>
  <p><%= comment.body %></p>
<% end %>
