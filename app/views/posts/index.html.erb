<h1>Welcome to not-Reddit</h1>
<p><%= link_to 'New Post', new_post_path %></p>

<% @posts.each do |post| %>
<h3><%= link_to "#{post.title}", post.url, :target => "_blank" %></h3>
<p><%= link_to "Upvote", upvote_path(post) %> <%= post.vote %> <%= link_to "Downvote", downvote_path(post) %> <%= link_to "View Post", post_path(post) %>
<%= link_to 'Edit Post', edit_post_path(post) %></p>
<% end %>
